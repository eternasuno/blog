{
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.codeActionsOnSave": [
            "source.organizeImports",
            "source.fixAll.eslint"
        ],
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[postcss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.codeActionsOnSave": [
            "source.organizeImports",
            "source.fixAll.eslint"
        ],
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.codeActionsOnSave": [
            "source.organizeImports",
            "source.fixAll.eslint"
        ],
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "tailwindCSS.classAttributes": ["class", "className", "ngClass", "tw"],
    "tailwindCSS.emmetCompletions": true
}
